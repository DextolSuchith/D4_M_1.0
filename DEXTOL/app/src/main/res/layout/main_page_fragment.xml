<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_page_ll"
    android:layout_height="match_parent">
>


    <android.support.v7.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:iconifiedByDefault="false"
        app:queryHint="Search for Doctors,Medical Stores"/>


    <TableLayout
        app:layout_constraintBottom_toTopOf="@id/tvspec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="00dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"  >


        <TableRow>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/b1docpf"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:text="@string/doctor"
                    android:textAllCaps="false" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.5dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/b2dgnpf"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:text="@string/diagnostics"
                    android:textAllCaps="false" />
            </android.support.v7.widget.CardView>

        </TableRow>

        <TableRow>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2.5dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/b3mspf"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="@string/medical_stores"
                    android:textAllCaps="false" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.5dp"
                android:layout_weight="1">

                <Button

                    android:id="@+id/b4treatpf"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="@string/treatment_theraphy"
                    android:textAllCaps="false" />
            </android.support.v7.widget.CardView>

        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:id="@+id/tvspec"
        android:padding="5dp"
        android:text="Search By Specialization"
        android:textSize="15dp"
        android:textStyle="bold|italic" />


    <TableLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <TableRow>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_menu_camera" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"

                android:src="@drawable/ic_menu_camera" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"

                android:src="@drawable/ic_menu_camera" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"

                android:src="@drawable/ic_menu_camera" />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"

                android:src="@drawable/ic_menu_camera" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"

                android:src="@drawable/ic_menu_camera" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@drawable/ic_menu_camera" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"

                android:src="@drawable/ic_menu_camera" />
        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/b1view_all"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginEnd="8dp"
        android:paddingTop="0.1mm"
        android:text="@string/view_all"
        android:textAllCaps="false"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="match_parent">


    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:background="@color/lightGreen"
        app:menu="@menu/bottom_navigation"
        android:id="@+id/b_nav"
        android:layout_gravity="bottom"
        android:focusedByDefault="false"
        android:layout_height="wrap_content">

    </android.support.design.widget.BottomNavigationView>

</LinearLayout>

</LinearLayout>





