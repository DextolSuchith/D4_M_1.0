<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"


        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Orange"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/medic_list_img"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_menu_camera" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/layout"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"

                    >

                    <TableRow android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/medic_list_pharmacy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="6"
                            android:hint="@string/pharmacy_name" />

                        <RatingBar
                            android:id="@+id/medic_list_ratingbar"
                            style="@android:style/Widget.Holo.RatingBar.Small"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:isIndicator="true"
                            android:numStars="5" />


                    </TableRow>

                    <TableRow android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/medic_list_mblno"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/mobile_no" />

                        <TextView
                            android:id="@+id/medic_list_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"

                            android:hint="@string/location" />


                    </TableRow>

                    <TableRow android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/medic_list_timings"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/timings" />

                    </TableRow>

                </TableLayout>

                <TextView
                    android:id="@+id/medic_list_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:text="@string/discount" />

                <Button
                    android:id="@+id/btn_medic_list"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/btn_text_color"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_shape"
                    android:ems="8"
                    android:text="@string/order_now"
                    android:textAllCaps="false" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
