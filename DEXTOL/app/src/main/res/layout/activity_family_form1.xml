<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/ff1_ll"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="15sp"
                android:inputType="text"
                android:hint="@string/name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:lineSpacingExtra="0dp"
                android:textSize="15sp"
                android:inputType="number"
                android:maxLength="10"
                android:hint="@string/mobile_no" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <EditText
                android:inputType="textEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="15sp"
                android:hint="@string/email_address" />
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">
    <EditText
        android:layout_width="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:ems="15"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:hint="@string/age" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">
    <EditText
        android:layout_width="wrap_content"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content"
        android:ems="15"
        android:textSize="15sp"
        android:maxLength="3"
        android:hint="@string/height" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:maxLength="3"
        android:textSize="15sp"
        android:inputType="number"
        android:hint="@string/weight" />

    </android.support.design.widget.TextInputLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:ems="4"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i_am"/>
        <RadioGroup
            android:id="@+id/f_radio_grp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/f_sex_m"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:ems="5"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male"/>

        <RadioButton
            android:id="@+id/f_sex_f"
            android:ems="7"
            android:checked="false"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>
        </RadioGroup>



    </LinearLayout>

    <TextView
        android:id="@+id/f_form_dob"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:ems="15"
        android:layout_margin="4dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"

        android:textSize="15sp"
        android:layout_height="35dp"
        android:text="Select Date Of Birth" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sprelation"
            android:layout_width="250dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_height="30dp">

        </android.support.v7.widget.AppCompatSpinner>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spblood"
            android:layout_width="250dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_height="30dp">

        </android.support.v7.widget.AppCompatSpinner>


        <Button
            android:id="@+id/alertb1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button_shape"
            style="@style/B_style"
            android:ems="8"
            android:layout_marginBottom="5dp"
            android:text="@string/next"
            android:textAllCaps="false" />

    </LinearLayout>

