<!-- This DrawerLayout has two children at the root  -->

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"

    android:scrollbars="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="?attr/colorPrimaryDark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp">

        </android.support.v7.widget.Toolbar>


        <FrameLayout
            android:id="@+id/fragment_container"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            style="@style/background"
            android:layout_height="match_parent" >



            <!--mainpage activity-->

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/main_page_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:iconifiedByDefault="false"
                    app:queryHint="Search for Doctors,Medical Stores" />


                <TableLayout
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/tvspec">


                    <TableRow>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/doc_profile_img"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/doctor_profile" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black"
                                    android:text="@string/doctor"
                                    android:textSize="10dp" />
                            </LinearLayout>



                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"  >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/diag_profile_img"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/diagnostics_profile" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/diagnostics"
                                    android:textColor="@color/black"
                                    android:textSize="10dp" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </TableRow>

                    <TableRow>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"  >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/medic_profile_img"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="2dp"
                                    android:background="@color/white"
                                    android:src="@drawable/medical_profile" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black"
                                    android:text="@string/medical_stores"
                                    android:textSize="10dp" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"  >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/treat_profile_img"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@color/white"
                                    android:src="@drawable/treatment_profile" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:padding="2dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black"
                                    android:text="@string/treatment_theraphy"
                                    android:textSize="10dp" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/tvspec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:padding="5dp"
                    android:textColor="@color/black"

                    android:text="Search By Specialization"
                    android:textSize="10dp"
                    android:textStyle="bold|italic" />


                <TableLayout
                    android:id="@+id/tl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp">

                    <TableRow>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/dermatology_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@color/white"
                                    android:src="@drawable/dermatology" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Dermatology"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/cardiology_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@color/white"
                                    android:src="@drawable/cardiology" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Cardiology"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/gynacology_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@color/white"
                                    android:src="@drawable/gynacology" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Gynacology"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/orthopedics_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@color/white"
                                    android:src="@drawable/orthopedics" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Orthopedics"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </TableRow>

                    <TableRow>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ent_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@color/white"
                                    android:src="@drawable/ent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="ENT"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/pulmonology_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@color/white"
                                    android:src="@drawable/pulmonology" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Pulmonology"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/urology_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@color/white"
                                    android:src="@drawable/urology" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Urology"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/general_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@color/white"
                                    android:src="@drawable/general" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="General Physician"
                                    android:textSize="10dp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </TableRow>

                </TableLayout>


                <Button
                    android:id="@+id/b1view_all"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:paddingTop="1dp"
                    android:text="@string/view_all"
                    android:textAllCaps="false"
                    android:textSize="10dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom">


                    <android.support.design.widget.BottomNavigationView
                        android:id="@+id/b_nav"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:defaultFocusHighlightEnabled="false"
                        android:elevation="15dp"
                        android:layout_gravity="bottom"
                        android:background="@color/lightGreen"
                        android:focusedByDefault="false"
                        app:menu="@menu/bottom_navigation">

                    </android.support.design.widget.BottomNavigationView>

                </LinearLayout>

            </LinearLayout>







        </FrameLayout>
    </LinearLayout>

    <!-- The navigation drawer that comes from the left -->
    <!-- Note that `android:layout_gravity` needs to be set to 'start' -->

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/usermenu" />
</android.support.v4.widget.DrawerLayout>



