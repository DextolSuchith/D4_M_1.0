<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppCompat" parent="Theme.AppCompat.Light.DarkActionBar"/>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Small_Action" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarSize">50dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="colorPrimary">@color/colorPrimaryDark</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="B_style">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:drawableEnd">@drawable/buttton</item>
    </style>

    <style name="B_style_left">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:drawableStart">@drawable/previous_button</item>
    </style>



</resources>
